<div class="container mt-5">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="row justify-content-center">
            <!-- Título centrado arriba -->
            <div class="col-12 text-center p-3">
                <h1 class="h4 text-gray-900 mb-2">Hacerse cargo de una heladera</h1>
            </div>
            <!-- Formulario centrado -->
            <form method="post" action="/hacerseCargoHeladera" class="d-flex flex-column align-items-center">
                <!-- Campo de entrada -->
                <div class="col-md-9">
                    <div class="col-md-12 mb-3">
                        <label for="nomHeladera" class="form-label">Nombre heladera</label>
                        <input type="text" class="form-control shadow-sm input-smaller" id="nomHeladera" name="nomHeladera" placeholder="Nombre" required>
                    </div>

                    <div class="row mb-3 mx-3" style="background-color: #ffffff; padding: 10px; border-radius: 5px;">
                        <div class="col-md-6 mb-3">
                            <label for="tempMinima" class="form-label">Temperatura minima</label>
                            <input type="number" class="form-control shadow-sm input-smaller" id="tempMinima" name="tempMinima" placeholder="Temperatura" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="tempMaxima" class="form-label">Temperatura maxima</label>
                            <input type="number" class="form-control shadow-sm input-smaller" id="tempMaxima" name="tempMaxima" placeholder="Temperatura" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="viandasMax" class="form-label">Cantidad maxima de viandas</label>
                            <input type="number" class="form-control shadow-sm input-smaller" id="viandasMax" name="viandasMax" required>
                        </div>
                    </div>

                    <h6 class="mx-3 text-center" style="color:#444444">¿Desea colocarla en su dirección?</h6>
                    <div class="row mb-3 mx-3 text-center">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="enDomicilio" id="flexRadioDefault1"
                                       name="eleccionUbicacion" required>
                                <label class="form-check-label" for="flexRadioDefault1" style="color: #333;">
                                    Sí
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" value="puntoSugerido" id="flexRadioDefault2"
                                       name="eleccionUbicacion" required>
                                <label class="form-check-label" for="flexRadioDefault2" style="color: #333;">
                                    No
                                </label>
                            </div>
                        </div>

                        <!-- Contenedor de Domicilio -->
                        <div class="container mx-3 my-3 text-center" id="domicilio-container" style="display: none;">
                            <h5>Domicilio</h5>
                            <div class="col-md-12">
                                <input type="text" id="domicilioInput" class="form-control"
                                       value="{{#domicilio}}{{domicilio}}{{/domicilio}}{{^domicilio}}No hay domicilio cargado{{/domicilio}}"
                                       readonly style="background-color: #f1f1f1; color: #333; font-size: 0.9rem; width: 100%;">
                            </div>
                        </div>

                        <!-- Contenedor de Puntos sugeridos -->
                        <div class="container mx-3 my-3 text-center" id="puntosSugeridos-container" style="display: none;">
                            <h5>Puntos sugeridos</h5>
                            <div class="col-md-12">
                                <select class="form-select mt-3" id="puntosSugeridos" name="puntoSugerido"
                                        style="display: block; width: 100%; padding: .375rem 2.25rem .375rem .75rem; font-size: 1rem; font-weight: 400; line-height: 1.5; color: #212529; background-color: #fff; border-color: #dee2e6; border-radius: 7px;">
                                    <option selected>Seleccione una ubicación</option>
                                    {{#puntosSugeridos}}
                                        <option value="{{latitud}},{{longitud}},{{direccion}}">
                                            {{direccion}}
                                        </option>
                                    {{/puntosSugeridos}}
                                    {{^puntosSugeridos}}
                                        <option disabled>No hay puntos sugeridos</option>
                                    {{/puntosSugeridos}}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botón centrado -->
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-success btn-custom mb-3" id="submitButton"
                            style="background-color: #f69000; border-color: #f69000;">Confirmar</button>
                </div>
            </form>
