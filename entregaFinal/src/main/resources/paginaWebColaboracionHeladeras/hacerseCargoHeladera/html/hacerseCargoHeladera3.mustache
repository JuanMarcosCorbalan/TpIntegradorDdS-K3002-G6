<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Obtener los elementos de los radio buttons
        var radioDomicilio = document.getElementById('flexRadioDefault1');
        var radioPuntoSugerido = document.getElementById('flexRadioDefault2');

        // Obtener los contenedores de domicilio y puntos sugeridos
        var domicilioContainer = document.getElementById('domicilio-container');
        var puntosSugeridosContainer = document.getElementById('puntosSugeridos-container');

        // Obtener el botón de submit
        var submitButton = document.getElementById('submitButton');
        var domicilioInput = document.getElementById('domicilioInput');

        // Función para habilitar o deshabilitar el botón de submit
        function validateDomicilio() {
            // Si el domicilio es "No hay domicilio cargado", deshabilitar el botón
            if (domicilioInput.value === "No hay domicilio cargado") {
                submitButton.disabled = true;
            } else {
                submitButton.disabled = false;
            }
        }

        // Inicializar el estado del botón al cargar la página
        validateDomicilio();

        // Escuchar cambios en los botones de radio
        radioDomicilio.addEventListener('change', function () {
            if (radioDomicilio.checked) {
                domicilioContainer.style.display = 'block'; // Mostrar el contenedor de domicilio
                puntosSugeridosContainer.style.display = 'none'; // Ocultar el contenedor de puntos sugeridos
                validateDomicilio(); // Validar al cambiar la opción
            }
        });

        radioPuntoSugerido.addEventListener('change', function () {
            if (radioPuntoSugerido.checked) {
                domicilioContainer.style.display = 'none'; // Ocultar el contenedor de domicilio
                puntosSugeridosContainer.style.display = 'block'; // Mostrar el contenedor de puntos sugeridos
                submitButton.disabled = false; // Habilitar el botón de submit si selecciona "No"
            }
        });
    });
</script>

