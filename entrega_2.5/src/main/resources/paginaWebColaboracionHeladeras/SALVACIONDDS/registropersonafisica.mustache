<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5 p-4">
        <form method="post" action="/registarPersonaFisica">
            <div class="justify-content-center">
                <div class="row mb-3 mx-3">
                    <div class="col-md-6">
                        <label for="nombres" class="form-label">Nombre/s</label>
                        <input type="text" class="form-control shadow-sm" id="nombres" name="inputNombre"
                               placeholder="Nombre/s actual/es">
                    </div>
                    <div class="col-md-6">
                        <label for="apellidos" class="form-label">Apellido/s</label>
                        <input type="text" class="form-control shadow-sm" id="apellidos" name="inputApellidos"
                               placeholder="Apellido/s actual/es">
                    </div>
                </div>

                <div class="row mb-3 mx-3">
                    <div class="col-md-6">
                        <label for="fecha-nacimiento" class="form-label">Fecha de Nacimiento</label>
                        <input type="date" class="form-control shadow-sm" id="fecha-nacimiento"
                               name="inputFechaNacimiento" placeholder="DD/MM/YYYY">
                    </div>
                </div>
                <!-- TIPO DOCUMENTACION -->
                <div class="row mb-3 mx-3">
                    <div class="col-md-6">
                        <label for="inputTipoDocumento" class="form-label">Tipo de Documento</label>
                        <select class="form-control shadow-sm" id="inputTipoDocumento" name="inputTipoDocumento">
                            <option selected>Seleccione tipo de documento</option>
                            <option value="1">Documento Nacional de Identidad</option>
                            <option value="2">Libreta de Enrolamiento</option>
                            <option value="3">Libreta Civica</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <!-- Numero documento -->
                        <label for="inputNumeroDocumento" class="form-label">Numero de documento</label>
                        <input type="number" class="form-control shadow-sm" id="inputNumeroDocumento"
                               name="inputNumeroDocumento" placeholder="1234567890">
                    </div>
                </div>


                <!-- Medios de contact-->
                <h5 class="mx-3" style="color: #000000;">Medios de contacto</h5>
                <div class="row mb-3 mx-3 " style="background-color: #D0E5F8; padding: 10px; border-radius: 5px;">
                    <div class="col-md-6 mb-3">
                        <label for="correo" class="form-label">Correo</label>
                        <input type="email" class="form-control shadow-sm input-smaller" id="correo" name="inputCorreo"
                               placeholder="Correo Electrónico actual">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="telefono" class="form-label">Número de teléfono</label>
                        <input type="text" class="form-control shadow-sm input-smaller" id="telefono"
                               name="inputTelefono" placeholder="Número de Teléfono actual">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="whatsapp" class="form-label">Whatsapp</label>
                        <input type="text" class="form-control shadow-sm input-smaller" id="whatsapp"
                               name="inputWhatsapp" placeholder="Whatsapp actual">
                    </div>
                </div>
                <!-- Domicilio -->
                <h5 class="mx-3" style="color:#000000">Domicilio</h5>
                <div class="row mb-3 mx-3" style="background-color: #D0E5F8; padding: 10px; border-radius: 5px;">
                    <div class="col-md-6 mb-3">
                        <label for="calle" class="form-label">Calle</label>
                        <input type="text" class="form-control shadow-sm input-smaller" id="calle" name="inputCalle"
                               placeholder="Calle actual">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="altura" class="form-label">Altura</label>
                        <input type="text" class="form-control shadow-sm input-smaller" id="altura" name="inputAltura"
                               placeholder="Altura actual">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="ciudad" class="form-label">Ciudad</label>
                        <input type="text" class="form-control shadow-sm input-smaller" id="ciudad" name="ciudad"
                               placeholder="Ciudad actual">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="localidad" class="form-label">Localidad</label>
                        <input type="text" class="form-control shadow-sm input-smaller" id="localidad"
                               name="inputLocalidad" placeholder="Localidad actual">

                    </div>

                </div>
                <button type="submit" class="btn btn-success btn-custom mx-3"
                        style="background-color: #f69000; border-color: #f69000;">Completar Registro
                </button>
            </div>
        </form>
    </div>
</div>

